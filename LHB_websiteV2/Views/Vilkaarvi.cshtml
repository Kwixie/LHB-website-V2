@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.WhoWeArePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;


@{
    Layout = "Master.cshtml";
    var i = 1;
}

<div class="whoweare-page container-fluid pt-md-5" style="background-color: @Model.BgColor">
    <div class="container wrapper">
        <div class="row section">
            <div class="col-md-12">
                <h1 class="heading">@Model.TextHeading</h1>
           

            @foreach (var story in Model.BlocklistStory)
            {
                var contentStory = (ContentModels.CompStory)story.Content;
                

                    <div class="my-5" id="@($"story{i}")">
                            <img src="@contentStory.Image.GetCropUrl("standard")" class="float-start img-fluid rounded-img" />
                            <h3 class="mt-2 p-3 mb-0">@contentStory.TextPresentation</h3>
                            <div class="rte mt-3"> @contentStory.RteBody </div>
                    </div>
                    i++;
                }
            </div>
        </div>
    </div>
</div>